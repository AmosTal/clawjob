rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ──────────────────────────────────────────────
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // ── User profiles ─────────────────────────────────────────────────
    // Users can only read/write their own profile. Admins can read all.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // Saved jobs — only the owning user
      match /saved/{jobId} {
        allow read, write: if isOwner(userId);
      }

      // CV versions — only the owning user
      match /cvVersions/{cvId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ── Jobs ──────────────────────────────────────────────────────────
    // Public read for all authenticated users. Only the employer who
    // owns the job can write it. Admins can write any job.
    match /jobs/{jobId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
                    && request.resource.data.employerId == request.auth.uid;
      allow update: if isAdmin()
                    || (isSignedIn() && resource.data.employerId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // ── Applications ──────────────────────────────────────────────────
    // Applicants can create and read their own applications.
    // Employers can read applications for jobs they own (enforced at API
    // layer since Firestore rules can't do cross-document joins).
    // Admins have full access.
    match /applications/{appId} {
      allow read: if isAdmin()
                  || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.status == "applied";
      allow update: if isAdmin()
                    || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
