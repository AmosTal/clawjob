# ── Firebase Client SDK (public, embedded in client bundle) ──────────
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ── Firebase Admin SDK (server-side only, keep secret) ───────────────
# JSON string of the service account key downloaded from Firebase Console
FIREBASE_SERVICE_ACCOUNT_KEY=

# ── App Configuration ───────────────────────────────────────────────
# Comma-separated list of admin email addresses
ADMIN_EMAILS=
# Shared secret for authenticating cron job requests (POST /api/cron/scrape)
CRON_SECRET=
# Full app URL for CORS origin validation (e.g. https://clawjob.web.app)
NEXT_PUBLIC_APP_URL=
